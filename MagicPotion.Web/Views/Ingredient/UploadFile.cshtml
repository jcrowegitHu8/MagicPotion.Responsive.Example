@{
	ViewBag.Title = "UploadFile";
}

<h2>UploadFile</h2>

@using (Html.BeginForm("UploadFile", "Ingredient", FormMethod.Post, new { enctype = "multipart/form-data" }))
{

	<div>
		@Html.TextBox("file", "", new { type = "file" }) <br />

		<input type="submit" value="Upload" />
		
		<p>
		@ViewBag.Message
		</p>
	</div>


}
